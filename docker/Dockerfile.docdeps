# Dockerfile for Firedrake plus packages needed to build the documentation

FROM firedrakeproject/firedrake-vanilla:pip

RUN sudo apt-get update; \
    sudo apt-get -y install inkscape texlive-full

# Install documentation dependencies, pass --break-system-packages because
# we aren't using a venv.
RUN pip install --break-system-packages --verbose \
        git+https://github.com/firedrakeproject/firedrake.git@connorjward/pip-install[docs]
